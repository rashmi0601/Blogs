<div class="form-container">
  <h1 class="form-title">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <% if resource.errors.any? %>
      <div class="field-error">
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <% if resource.errors[:email].any? %>
        <p class="field-error"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <% if resource.errors[:password].any? %>
        <p class="field-error"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
