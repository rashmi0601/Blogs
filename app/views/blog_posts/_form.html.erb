<%= form_with model: @blog_post, local: true, html: { class: "blog-form" } do |form| %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <% if @blog_post.errors[:title].any? %>
      <div class="field-error">
        <%= @blog_post.errors[:title].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, id: "hidden-content", class: "form-control", style: "display: none;" %>
    <div id="editor" class="quill-editor">
      <%= raw @blog_post.content %> <!-- Pre-fill existing content for editing -->
    </div>

    <% if @blog_post.errors[:content].any? %>
      <div class="field-error">
        <%= @blog_post.errors[:content].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Save Blog Post", class: "btn btn-primary" %>
  </div>

<% end %>
